<?xml version="1.0" encoding="utf-8"?>
<com.kalyanamela.android.ui.profile.HeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameHeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/header_view_end_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cityHeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/colorAccent" />


</com.kalyanamela.android.ui.profile.HeaderView>